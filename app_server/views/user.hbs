<div class="user-wrapper">
    <div class="pro-head">
        <h2>Quản lý người dùng</h2>
    </div>
    <div class="table-wrapper table-responsive">
        {{#if isSuperAdmin}}
            <table class="table">
                <thead>
                <tr class="success text-center">
                    <th style="width:5%;">#</th>
                    <th style="width:12%;">Tên tài khoản</th>
                    <th style="width: 7%;">Loại TK</th>
                    <th style="width:16%;">Tên người dùng</th>
                    <th style="width:10%;">Email</th>
                    <th style="width:12%;">Số điện thoại</th>
                    <th style="width:28%;" class="text-center">Địa chỉ</th>
                    <th style="width:10%;">Tỉnh thành</th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>

                            <a href="{{myAppend "/user_detail/" userId}}"  class="text-success text-"><u>{{username}}</u></a>

                        </td>
                        <td>{{getUserType type}}</td>
                        <td>{{default firstName lastName "..."}} {{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{default phone "...."}}</td>
                        <td class="text-center">{{default address "..."}}</td>
                        <td>{{default city "..."}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{else}}
            <table class="table">
                <thead>
                <tr class="success text-center">
                    <th style="width:5%;">#</th>
                    <th style="width:13%;">Tên tài khoản</th>
                    <th style="width:20%;">Tên người dùng</th>
                    <th style="width:10%;">Email</th>
                    <th style="width:12%;">Số điện thoại</th>
                    <th style="width:30%;" class="text-center">Địa chỉ</th>
                    <th style="width:10%;">Tỉnh thành</th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>

                            <a href="{{myAppend "/user_detail/" userId}}"  class="text-success text-"><u>{{username}}</u></a>

                        </td>
                        <td>{{default firstName lastName "..."}} {{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{default phone "..."}}</td>
                        <td class="text-center">{{default address "..."}}</td>
                        <td>{{default city "..."}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{/if}}
    </div>
    <div class="clearfix"> </div>
</div>

