<div class="user-detail-wrapper">
    <div class="pro-head">
        <h2>Thông tin chi tiết người dùng: {{userDetail.userId}}</h2>
    </div>
    <div class="user-info-wrapper">
        <form class="form" action="" method="post">
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_name">Tên người dùng:</label>
                    <input type="text" class="form-control" id="user_name" name="user" value="{{default userDetail.firstName userDetail.lastName "..."}} {{lastName}}" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="user_tk">Tên tài khoản:</label>
                    <div class="" id="user_tk">{{userDetail.username}}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_gender">Giới tính:</label>
                    <input type="text" class="form-control" id="user_gender" name="user_gender" value="{{default userDetail.gender "..."}}" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="user_type">Loại tài khoản:</label>
                    <div class="" id="user_type">{{default userDetail.type "..."}}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_birthDate">Ngày sinh:</label>
                    <input type="date" class="form-control" id="user_birthDate" name="user_birthDate" value="{{parseDateInput userDetail.birthDate "-"}}" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="user_createdDate">Ngày đăng ký:</label>
                    <div class="" id="user_createdDate">{{parseDateTime userDetail.createdDate "/"}}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_email">Email:</label>
                    <input type="email" class="form-control" id="user_email" name="user_email" value="{{default userDetail.email "..."}}" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="user_isActive">Tình trạng:</label>
                    <div class="status-text" id="user_isActive" data-userId="{{userDetail.userId}}" style="font-weight: 600; color: {{getStatusColor userDetail.status}}">{{getStatusMsg userDetail.status}}</div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_address">Địa chỉ:</label>
                    <textarea class="form-control" id="user_address" name="user_address" rows="3" disabled>{{default userDetail.address "..."}}</textarea>
                </div>
                <div class="form-group col-md-6">
                    <td><button type="button" data-userId="{{userDetail.userId}}" data-isActive="{{numberizeBoolean userDetail.isActive}}" class="set-status-btn btn {{getStatusBlockBtnClass userDetail.isActive}}">{{getStatusBlockMsg userDetail.isActive}}</button></td>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_phone">Số điện thoại:</label>
                    <input type="tel" class="form-control" id="user_phone" name="user_phone" value="{{default userDetail.phone "..."}}" disabled>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="user_city">Tỉnh thành:</label>
                    <select id="user_city" class="form-control" name="user_city" disabled>
                        <option selected>{{default userDetail.city "..."}}</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <div class="clearfix"> </div>
</div>
<script type="text/javascript">

</script>
