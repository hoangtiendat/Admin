<div class="user-detail-wrapper">
    <div class="pro-head">
        <h2>{{user}}</h2>
    </div>
    <div class="user-info-wrapper">
        <form class="form" action="user_detail" method="post">
            <div class="form-group">
                <label for="user_tk">Tên tài khoản:</label>
                <input type="text" class="form-control" id="user_tk" name="user_tk" value="NVA">
            </div>
            <div class="form-group">
                <label for="user_name">Tên người dùng:</label>
                <input type="text" class="form-control" id="user_name" name="user" value="Nguyễn Văn A">
            </div>
            <div class="form-group">
                <label for="user_email">Email:</label>
                <input type="email" class="form-control" id="user_email" name="user_email" value="nva@gmail.com">
            </div>
            <div class="form-group">
                <label for="user_phone">Số điện thoại:</label>
                <input type="tel" class="form-control" id="user_phone" name="user_phone" value="123456789">
            </div>
            <div class="form-group">
                <label for="user_address">Địa chỉ:</label>
                <textarea class="form-control" id="user_address" name="user_address" rows="5">227 Nguyễn Văn Cừ Q5 TP Hồ Chí Minh</textarea>
            </div>
            <div class="form-group">
                <label for="user_city">Tỉnh thành:</label>
                <select id="user_city" class="form-control" name="user_city">
                    <option>Chọn tỉnh thành</option>
                    <option selected>TP HCM</option>
                    <option>Hà Nội</option>
                    <option>Đà Nẵng</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success pt">Thay đổi</button>
        </form>
    </div>
    <div class="clearfix"> </div>
</div>